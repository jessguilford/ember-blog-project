<li>
  <div class="post-title">
    {{post.title}}
  </div>
  <div class="post-details">
    <ul>
      <li>{{post.author}}</li>
      <li>{{post.date}}</li>
    </ul>
  </div>
  <div class="post-body">
    <img src={{post.image}} alt={{post.title}} />
    {{post.content}}
  </div>
  <div class="commentSection">
    <ul>
      {{#each model.comments as |comment|}}
        <h1>{{comment-tile comment=comment}}</h1>
      {{/each}}
    </ul>
    {{new-comment post=post save="save"}}
  </div>
</li>
